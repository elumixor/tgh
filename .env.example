# Bot configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

BOT_MODE=polling  # "polling" for local dev, "webhook" for production

# Telegram User Client (for message search)
# Get API credentials from https://my.telegram.org/apps
TELEGRAM_API_ID=your_api_id
TELEGRAM_API_HASH=your_api_hash
TELEGRAM_PHONE_NUMBER=your_phone_number
TELEGRAM_SESSION=your_session_string  # Generate by running: bun run login

OPENAI_API_KEY=your_openai_api_key

# Required for webhook mode (production)
WEBHOOK_URL=https://your-app.onrender.com

# API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key
GEMINI_API_KEY=your_gemini_api_key
MESHY_API_KEY=your_meshy_api_key
PERPLEXITY_API_KEY=your_perplexity_api_key

# Notion Integration
NOTION_API_KEY=your_notion_api_key
NOTION_DATABASE_ID=your_agent_memories_database_id

# Access Control
ALLOWED_USER_ID=your_telegram_user_id
ALLOWED_CHAT_ID=your_telegram_chat_id
