# Bot configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

BOT_MODE=polling  # "polling" for local dev, "webhook" for production

# Telegram User Client (for message search)
# Get API credentials from https://my.telegram.org/apps
TELEGRAM_API_ID=your_api_id
TELEGRAM_API_HASH=your_api_hash
TELEGRAM_PHONE_NUMBER=your_phone_number
TELEGRAM_SESSION=your_session_string  # Generate by running: bun run login

OPENAI_API_KEY=your_openai_api_key

# Required for webhook mode (production)
WEBHOOK_URL=https://your-app.onrender.com

# API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key
GEMINI_API_KEY=your_gemini_api_key
MESHY_API_KEY=your_meshy_api_key
PERPLEXITY_API_KEY=your_perplexity_api_key

# Notion Integration
NOTION_API_KEY=your_notion_api_key
NOTION_MEMORIES_PAGE_ID=your_notion_memories_page_id
NOTION_PEOPLE_DB_ID=your_notion_people_database_id
NOTION_ROLES_DB_ID=your_notion_roles_database_id
NOTION_SENSITIVE_DATA_DB_ID=your_notion_sensitive_data_database_id
NOTION_TASKS_DB_ID=your_notion_tasks_database_id
NOTION_HYPOCRISY_DB_ID=your_notion_hypocrisy_database_id
NOTION_SKILLS_DB_ID=your_notion_skills_database_id

# Access Control
ALLOWED_USER_ID=your_telegram_user_id
ALLOWED_CHAT_ID=your_telegram_chat_id

# Google API (OAuth - run: bun run scripts/google-auth.ts <client_id> <client_secret>)
GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret
GOOGLE_REFRESH_TOKEN=your_google_refresh_token
GOOGLE_DRIVE_NDA_TEMPLATE_ID=your_nda_template_document_id
GOOGLE_DRIVE_AGREEMENTS_FOLDER_ID=your_agreements_folder_id

# DigiSigner
DIGISIGNER_API_KEY=your_digisigner_api_key

# Telegram Team Group
TELEGRAM_TEAM_GROUP_ID=your_team_group_id
TELEGRAM_TEAM_INVITE_LINK=your_team_invite_link
